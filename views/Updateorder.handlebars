<img src="/images/Logo/ProjectBeer.png" style="width:10%">

<h1>update a Order</h1>
{{#if error}}
              <div class="alert alert-danger">{{error}}</div>
               {{/if}}
<div style="width:40% ;margin:0 0  50px 550px;" align="center" class="card-body">

    <form action="/UpdateOrder" method="POST" class="card-title">

        <div class="container">
            <div class="row">
                <div class="col">
                    <span> NEW Email:</span>
                    <input type="email" class="form-control" placeholder=" NEW Email" name="email">
                    <span> NEW liter:</span>
                    <div class="col-4">

                        <div>
                            <label class="btn btn-primary">
                                <input type="radio" value="5L" name="group2" ng-model="orderform.liter"> 5L
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" value="10L" name="group2" ng-model="orderform.liter"> 10L
                            </label>
                            <label class="btn btn-primary">
                                <input type="radio" value="20L" name="group2" ng-model="orderform.liter"> 20L
                            </label>
                        </div>

                    </div>
                    <span> NEW matireal</span>

                    <div class="row">
                        <div class="col-4">


                            <div style="margin: 10px;">

                                <div>
                                    <label class="btn btn-primary">
                                        <input type="radio" value="Yeast" name="group8" ng-model="orderform.matireal">
                                        Yeast
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" value="wheat" name="group8" ng-model="orderform.matireal">
                                        wheat
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" value="Hops" name="group8" ng-model="orderform.matireal">
                                        Hops
                                    </label>
                                    <label class="btn btn-primary">
                                        <input type="radio" value="Malt" name="group8" ng-model="orderform.matireal">
                                        Malt
                                    </label>
                                </div>



                            </div>
                        </div>
                    </div>

                    <span> NEW Filter:</span>
                    <input type="text" class="form-control" placeholder=" NEW Filter" name="Filter">
                    <span> NEW Spices:</span>
                    <input type="text" class="form-control" placeholder=" NEW Spices" name="Spices">
                    <div class="col-4">

                        <div style="margin: 10px;">
                            <span>Alcohol : </span>

                            <div>
                                <label class="btn btn-primary">
                                    <input type="radio" value="3%" name="group4" ng-model="orderform.alco"> 3%
                                </label>
                                <label class="btn btn-primary">
                                    <input type="radio" value="5%" name="group4" ng-model="orderform.alco"> 5%
                                </label>
                                <label class="btn btn-primary">
                                    <input type="radio" value="8%" name="group4" ng-model="orderform.alco"> 8%
                                </label>
                                <label class="btn btn-primary">
                                    <input type="radio" value="10%" name="group4" ng-model="orderform.alco"> 10%
                                </label>

                            </div>
                        </div>
                    </div>
                    <span> NEW pakege:</span>
                    <div class="col-4">

                        <div>
                            <div class="btn-group btn-lg">
                                <label class="btn btn-primary">
                                    <input type="radio" value="keg" name="group1" ng-model="orderform.pakege"> keg
                                    <img src="https://png.icons8.com/wooden-beer-keg/win10/54/000000"
                                        style="width:25px">
                                </label>
                                <label class="btn btn-primary">
                                    <input type="radio" value="bottles" name="group1" ng-model="orderform.pakege">
                                    bottles
                                    <img src="data:image/png;base64,"
                                        style="width:25px">
                                </label>
                            </div>
                        </div>
                    </div>

                    <span> NEW textarea:</span>
                    <input type="text" class="form-control" placeholder=" NEW textarea" name="textarea">
                </div>
                <div class="col">

                    <span> NEW Fname:</span>
                    <input type="text" class="form-control" placeholder=" NEW Fname" name="Fname">
                    <span> NEW Lname:</span>
                    <input type="text" class="form-control" placeholder=" NEW Lname" name="Lname">
                    <span> NEW Address:</span>
                    <input type="text" class="form-control" placeholder=" NEW Address" name="Address">
                    <span> NEW City:</span>
                    <input type="text" class="form-control" placeholder=" NEW City" name="City">
                    <span> NEW State:</span>
                    <input type="text" class="form-control" placeholder=" NEW State" name="State">
                    <span> NEW ZipCode:</span>
                    <input type="text" class="form-control" placeholder=" NEW ZipCode" name="ZipCode">
                    <span> NEW cardNumber:</span>
                    <input type="text" class="form-control" placeholder=" NEW text" name="cardNumber">
                    <span> NEW cardExpiry:</span>
                    <input type="text" class="form-control" placeholder=" NEW text" name="cardExpiry">
                    <span> NEW couponCode:</span>
                    <input type="text" class="form-control" placeholder=" NEW text" name="couponCode">
                </div>
            </div>

        </div>


</div>




<div>


    <input type="hidden" class="form-control" name="date" required>
     <input type="hidden" name="orderid" value={{this.orderId}}>
                    
    <button class="btn btn btn-info btn-lg" type="submit">Update</button>
    </form>
    <button class="btn btn btn-secondary btn-lg" type="submit">
        {{#if admin}} <a href="/users/admin/hompage">Back</a>
        {{else}} <a href="/users/account/">Back</a>
        {{/if}}

    </button>

</div>